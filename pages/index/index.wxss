/* 从这里开始都是搜索框的样式表 */
.search{  
  width: 80%;  
}  
.search_arr {  
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx;  
  margin-left: 20rpx;  
}  
.search_arr input{  
  margin-left: 60rpx;  
  height: 60rpx;  
  border-radius: 5px;  
}  
.bc_text {  
  line-height: 68rpx;  
  height: 68rpx;  
  margin-top: 34rpx;  
}  
.searchpage_row{  
  display: flex;  
  flex-direction: row;
  justify-content: center; 
}  
.searchcion {  
  margin: 10rpx 10rpx 10rpx 10rpx;  
  position: absolute;  
  left:100rpx;  
  z-index: 2;  
  width: 20px;  
  height: 20px;  
  text-align: center;  
}  


/* 轮播样式表 */
.lunboblock {
  margin: -30px 25px;
 
}


/* 分类菜单导航栏 */
.menu-wrp { 
  width:85%; 
  margin-top:100rpx; 
  margin-left: 20px;
 } 
 .menu-wrp:after{ 
   content:""; 
   display:block; 
   clear:both; 
 } 
/* 这是菜单导航单个项目的样式 */
 .menu-list{ 
   float:left; 
   width:25%; 
   box-sizing: border-box; 
   padding-bottom:10px; 
  
 } 
   
 .menu-img{ 
   width:120rpx; 
   height:84rpx; 
   display:block; 
   margin:0 auto; 
   margin-bottom:5px; 
 } 
 .menu-desc{ 
   background-color:#ffffff; 
   color:#E86E25; 
   width:100%; 
   text-align: center; 
   display:block; 
   font-size:12px; 
 } 
 .gap-1,.gap-2{ 
   width:100%; 
   height:10rpx; 
   background:rgb(238, 238, 238); 
 }


 /* 从这里开始是每日推荐的样式 */
 .recommendblock {
   margin-left: 10px;
   margin-top: 10px;
 }
 .recommendlabel {
   padding: 7px;
   background-color: #FFCBA7;
   color: #FF625D;
   border-radius: 3px;
 }
 .recommend-list {
   display: flex;
   flex-wrap: wrap;
   justify-content: center;
   margin-top: 20px;
 }

 /* 菜单列表样式 */
 .goodslist-block {
   margin-left: 10px;
   margin-top: 10px;
 }
 .goodslist-check {
   margin-top: 10px;
   margin-bottom: 10px;
   font-size: 13px;
   color: #767171;
   display: flex;
 }
 .goodslist-check .check2 {
   margin-left: 15px;
   margin-right: 25px;

 }
 .goodslist-check .check3 {
   display: flex;
 } 
 .check3 .aicon image {
   margin-top: 4px;
   margin-left: 3px;
   width: 12px;
   height: 12px;
 }
 





